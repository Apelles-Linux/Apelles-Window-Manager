! DWM Base Colors
dwm.normfgcolor: #ebdbb2
dwm.normbgcolor: #282828
dwm.normbordercolor: #928374

dwm.selfgcolor: #ebdbb2
dwm.selbgcolor: #98971a
dwm.selbordercolor: #98971a

! Window Title Colors (optional, will default to above if not set)
dwm.titlenormfgcolor: #ebdbb2
dwm.titlenormbgcolor: #282828
dwm.titlenormbordercolor: #928374

dwm.titleselfgcolor: #ebdbb2
dwm.titleselbgcolor: #504945
dwm.titleselbordercolor: #504945

! Tag Colors (optional, will default to above if not set)
dwm.tagsnormfgcolor: #a89984
dwm.tagsnormbgcolor: #282828
dwm.tagsnormbordercolor: #928374

dwm.tagsselfgcolor: #ebdbb2
dwm.tagsselbgcolor: #98971a
dwm.tagsselbordercolor: #98971a

! Info Colors (optional, will default to above if not set)
dwm.infofgcolor: #ebdbb2
dwm.infobgcolor: #282828
dwm.infobordercolor: #928374

! Layout Settings
dwm.borderpx: 2
dwm.gappx: 8
dwm.snap: 32
dwm.showbar: 1
dwm.topbar: 1

! Window Management
dwm.nmaster: 1
dwm.resizehints: 0
dwm.mfact: 0.55

! Status Bar Colors (for status2d patch if used)
dwm.statusfgcolor: #ebdbb2
dwm.statusbgcolor: #282828

! Terminal Colors (for consistent theming)
*.foreground: #ebdbb2
*.background: #282828
*.cursorColor: #ebdbb2

! Black + DarkGrey
*.color0: #282828
*.color8: #928374

! DarkRed + Red
*.color1: #cc241d
*.color9: #fb4934

! DarkGreen + Green
*.color2: #98971a
*.color10: #b8bb26

! DarkYellow + Yellow
*.color3: #d79921
*.color11: #fabd2f

! DarkBlue + Blue
*.color4: #458588
*.color12: #83a598

! DarkMagenta + Magenta
*.color5: #b16286
*.color13: #d3869b

! DarkCyan + Cyan
*.color6: #689d6a
*.color14: #8ec07c

! LightGrey + White
*.color7: #a89984
*.color15: #ebdbb2

! Additional Settings
dwm.font: monospace:size=10
